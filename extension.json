{
    "id": "ibm.devops.services.pipeline.docker.builder",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Build",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "REGISTRY_URL",
            "type": "Text",
            "required": "false",
            "label_key": "REGISTRY_URL_KEY",
            "desc_key": "REGISTRY_URL_DESC"
        },        
        {
            "name": "APPLICATION_NAME",
            "type": "Text",
            "required": "false",
            "label_key": "APPLICATION_NAME_KEY",
            "desc_key": "APPLICATION_NAME_DESC"
        },
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value" : "#!/bin/bash\n
# default docker build script\n
# put your updates here\n
sample_build_script.sh\n",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
export REGISTRY_URL=#REGISTRY_URL#
export APPLICATION_NAME=#APPLICATION_NAME#
set +x 
set +e 
. $EXT_DIR/_init.sh
/bin/bash -e #COMMAND#"
    }
    },
    "project": "https://hub.jazz.net/project/rjminsha/pipeline_service_docker_builder",
    "project_example": "https://hub.jazz.net/pipeline/rjminsha/ice-pipeline_demo",
    "project_contact": "rjminsha@us.ibm.com"
}